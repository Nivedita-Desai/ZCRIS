@{
    //ViewBag.Title = "LoanApplicationApproveList";
    
    var grid = new WebGrid(Model,canSort:true,canPage:true, rowsPerPage: 9);
    grid.Pager(WebGridPagerModes.All);
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}

<body>
    <br/>
    <div class="container">
            <div class="panel panel-primary" style="height:660px">
                <div class="panel-heading"> <label id="lblHeading" class="filter-col control-label labelHead">Loan Application Approve List</label>  </div>
                <div class="panel-body">
        <div class="row">
             <div class="col-xs-1">
                           
               </div>
             <div class="col-xs-10">
            <div class="panel panel-primary filterable">
                <div class="panel-heading">
                    <h3 class="panel-title">LoanApplicationApproveList </h3>
                   @* <div class="pull-right">
                        <button class="btn btn-default btn-xs btn-filter"><span class="glyphicon glyphicon-filter"></span> Filter</button>
                    </div>*@
                </div>
             
                    <table class="table">
                        <thead>
                            <tr class="filters">

                               <th style="width: 34px">
                                    <input type="text" class="form-control" placeholder="Loan Application No" disabled>
                                </th>
                                 <th style="width: 30px">
                                    <input type="text" class="form-control" placeholder="Loan Type" disabled>
                                      </th>
                                      <th style="width: 24px">
                                    <input type="text" class="form-control" placeholder="Loan Application Date" disabled>
                               
                                </th>
                                    <th style="width: 15px">
                                    <input type="hidden" class=" form-control" disabled></th>


                            </tr>
                        </thead>
                        <tbody>
                            <tr class="filters">
                                @grid.GetHtml(
                tableStyle: "table",
                headerStyle: "webgrid-header",
                        
                columns: grid.Columns(
                  grid.Column(columnName: "LoanApplicationNo", style: "webgrid-fixColumn"),
                    grid.Column(columnName: "LoanType", style: "webgrid-fixColumn"),
                       grid.Column(columnName: "LoanApplicationDate",format: item => ((item.LoanApplicationDate == null) ? "" : item.LoanApplicationDate.ToString("dd/MMM/yyyy")) , style: "webgrid-fixColumn"),
                        //grid.Column(columnName: "ID", style: "webgrid-footer")
                        grid.Column("", format: @<text>@Html.ActionLink("Proceed to Loan Disbursement", "AddLoanDisburse", "LoanDisburse", new { intid = item.LoanApplicationNo }, null)</text>)
                     ))     </tr>
                        </tbody>
                    </table>
            
                </div>
                 </div> 
            <div class="col-xs-1">
                           
               </div>
        </div>
    </div>
                </div>
        </div>

</body>

