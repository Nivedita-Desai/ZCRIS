
@{
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";

    var grid = new WebGrid(Model, canSort: true, canPage: true, rowsPerPage:10);
    grid.Pager(WebGridPagerModes.All);
    
}

   <script src="@Url.Content("~/js/filter.js")"></script>

<body>
    <br/>
    <div class="container">
            <div class="panel panel-primary" style="height:660px">
                <div class="panel-heading"> <label id="lblHeading" class="filter-col control-label labelHead">College Details </label>  </div>
                <div class="panel-body">
        <div class="row">
             <div class="col-xs-1">
                           
               </div>
             <div class="col-xs-10">
            <div class="panel panel-primary filterable">
                <div class="panel-heading">
                    <h3 class="panel-title">Colleges</h3>
                    <div class="pull-right">
                        <button class="btn btn-default btn-xs btn-filter"><span class="glyphicon glyphicon-filter"></span> Filter</button>
                    </div>
                </div>
             
                    <table class="table">
                        <thead>
                            <tr class="filters">

                                <th style="width: 35px">
                                    <input type="text" class="form-control" placeholder="College Name" disabled>
                                </th>
                                <th style="width: 34px">
                                    <input type="text" class="form-control" placeholder="Address" disabled>
                                </th>
                                <th style="width: 25px">
                                    <input type="text" class="form-control" placeholder="Website" disabled>
                                </th>

                                <th style="width: 15px">
                                    <input type="hidden" class=" form-control" disabled></th>


                            </tr>
                        </thead>
                        <tbody >
                            <tr class="filters">
                                @grid.GetHtml(
                tableStyle: "table",
                headerStyle: "webgrid-header",
                         //footerStyle: "webgrid-footer",

                columns: grid.Columns(
                  grid.Column(columnName: "CollegeName", style: "webgrid-fixColumn"),
                    grid.Column(columnName: "Address", style: "webgrid-fixColumn"),
                     grid.Column(columnName: "Website", style: "webgrid-fixColumn"),
                        grid.Column(columnName: "id", style: "webgrid-footer")

                  @* grid.Column("", format: @<text>@Html.ActionLink("View", "CollegeDetails", "CollegeMaster", new { id = item.id }, null)</text>)))
            *@        ))        </tr>
                        </tbody>
                    </table>
            
                </div>
                 </div> 
            <div class="col-xs-1">
                           
               </div>
        </div>
    </div>
                </div>
        </div>

</body>

<script type="text/javascript">
    $(function () {
        debugger;
        $('tbody tr').hover(function () {
            $(this).toggleClass('clickable');
        }).on('click', function () {
            location.href = '/CollegeMaster/CollegeDetails/' + $(this).find('td:last').text();
        });
    });
</script>  
