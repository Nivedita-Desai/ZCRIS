@{

    var grid = new WebGrid(Model, canSort: true, canPage: true, rowsPerPage:8);
    grid.Pager(WebGridPagerModes.All);
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}

@*<script src="~/js/filter.js"></script>*@
<br/>
 <div class="container">
      <div class="panel panel-primary">
                <div class="panel-heading"> <label id="lblHeading" class="filter-col control-label labelHead">Loan Type Details</label>  </div>    
            <div class="row" >
                 <div class="col-xs-1">
                           
               </div>
            <div class="col-xs-10">
                           
            <div class="panel panel-primary filterable">
                <div class="panel-heading">
                    <h3 class="panel-title">Loan Type</h3>
                    <div class="pull-right">
                        <button class="btn btn-default btn-xs btn-filter"><span class="glyphicon glyphicon-filter"></span> Filter</button>
                    </div>
                </div>
                <div style=" overflow-x:auto;height:500px" >
                <table class="table">
                    <thead>
                        <tr class="filters">
                             <th width="10px"> <input type="text"  placeholder="Loan Type" disabled> </th>
                            <th width="10px">  <input type="text"  placeholder="Credit Type" disabled> </th>
                            <th width="10px">   <input type="text" placeholder="Category" disabled> </th>                          
                             <th width="15px">  <input type="hidden" disabled></th>

                            @* </div>*@

                        </tr>
                    </thead>
                    <tbody class="table">
                        <tr class="filters">
                            @grid.GetHtml(
                tableStyle: "table",
                headerStyle: "webgrid-header",
                columns: grid.Columns(
                   grid.Column(columnName: "Type", style: "webgrid-fixColumn"),
                  grid.Column(columnName: "CreditType", style: "webgrid-fixColumn"),
                  grid.Column(columnName: "category", style: "webgrid-fixColumn"),
                   grid.Column(columnName: "Id", style: "webgrid-hide")
                 ))
                        </tr>
                    </tbody>
                </table>
                    </div>
                </div>
</div>
                 <div class="col-xs-1">
                           
               </div>
        </div>
    </div>
     </div>

<script type="text/javascript">
    $(function () {
        debugger;
        $('tbody tr').hover( function(){
            $(this).toggleClass('clickable');
        }).on('click', function(){
            location.href = '/Master/EditLoanType/' + $(this).find('td:last').text();
        }); 
    });
</script>  
