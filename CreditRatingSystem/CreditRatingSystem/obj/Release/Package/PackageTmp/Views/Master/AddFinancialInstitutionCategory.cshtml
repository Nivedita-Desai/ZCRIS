                        <div class="col-xs-4">
                         @*   @Html.HiddenFor(model => model.Id)*@
                            <div class="form-group">
                                <label id="lblAccType" class="filter-col control-label label1">Category Name:</label>
                                @Html.TextBoxFor(modelItem => modelItem.Category, new { @class = "form-control"})                                                           
                            </div>
                        </div>
                          <div class="col-xs-4">
                                    </div>
                    </div>
                                   </fieldset> 
                      <div class="row">
                                <div class="col-xs-5">
                                    </div>
                                    <div class="col-xs-4">
                                        @*<button id="btnSave" type="" name="save"  formmethod="post">Save</button>*@
                                        <input type="button" id="btnSave" value="Save" />
                                        
                                    </div>
                           <div class="col-xs-3">
                               @Html.HiddenFor(model => model.Id)

                                    </div>
                                </div>
                </div>
            </div>
            </div>



<script type="text/javascript" >

    $('#btnSave').click(function () {

        debugger;
        var Id = $("#Id").val();
        if ($("#Id").val() == "") {
            Id = 0;
        }
        var Category = $("#Category").val();
    debugger;
    $.ajax ({

        url: '/Master/AddFinancialInstitutionCategory1/',
        type :'POST',
        data: { Id: Id, Category: Category },
        success: function (data) {
            debugger;
            var a = JSON.stringify(data);
            if (Id == "") {

                if (a == "true") {

                    alert('Data saved successfully!');
                    $("#Category").val('');
                }
                else if (a == "false") {

                    alert('Category already Exits!');
                    $("#Category").val("");
                }

            }
            else {
                if (a == "true") {
                    alert('Data saved successfully!');
                    window.location.href = '/Master/ViewFinancialInstitutionCategory';
                }
                else if (a == "false") {

                    alert('Category already Exits');
                    $("#Category").val("");
                }

            }
        }
      });
   });
</script>

