

@{
                             Layout = "~/Views/Shared/_LayoutMaster.cshtml";
    //ViewBag.Title = "ViewDistributionType";
    var grid = new WebGrid(Model, canSort: true, canPage: true, rowsPerPage: 10);
    grid.Pager(WebGridPagerModes.All);
}

 <script src="@Url.Content("~/js/filter.js")"></script>

<body>
    <br/>
    <div class="container">
            <div class="panel panel-primary" style="height:660px">
                <div class="panel-heading"> <label id="lblHeading" class="filter-col control-label labelHead">Distribution Agreement  Details </label>  </div>
                <div class="panel-body">
        <div class="row">
             <div class="col-xs-1">
                           
               </div>
             <div class="col-xs-10">
            <div class="panel panel-primary filterable">
                <div class="panel-heading">
                    <h3 class="panel-title">Distribution Agreement  Details</h3>
                    <div class="pull-right">
                        <button class="btn btn-default btn-xs btn-filter"><span class="glyphicon glyphicon-filter"></span> Filter</button>
                    </div>
                </div>
             
                    <table class="table">
                        <thead>
                            <tr class="filters">
       @*                         <th style="width: 50px">Id
                   
                                </th>*@
                                <th style="width: 50px">
                                    <input type="text" class="form-control" placeholder="Distribution Year" disabled>
                                </th>
                               
                            
                                
                            
                                <th style="width: 15px">
                                    <input type="hidden" class=" form-control" disabled></th>


                            </tr>
                        </thead>
                        <tbody >
                            <tr class="filters">
                                @grid.GetHtml(
                tableStyle: "table",
                headerStyle: "webgrid-header",
                         //footerStyle: "webgrid-footer",

                columns: grid.Columns(
                grid.Column(columnName: "DisAgreementYearId", style: "webgrid-fixColumn  webgrid-hide"),
                  // grid.Column(columnName: "ShortName", style: "hide"),
                    grid.Column(columnName: "EffectiveDate", style: "webgrid-fixColumn")
                   //  grid.Column(columnName: "Percentage", style: "hide"),
                    //grid.Column(columnName: "Id", style: "hide")

                  @* grid.Column("", format: @<text>@Html.ActionLink("View", "CollegeDetails", "CollegeMaster", new { id = item.id }, null)</text>)))
            *@        ))        </tr>
                        </tbody>
                    </table>
            
                </div>
                 </div> 
            <div class="col-xs-1">
                           
               </div>
        </div>
    </div>
                </div>
        </div>

</body>

<script type="text/javascript">
    $(function () {
        debugger;
        $('tbody tr').hover(function () {
            $(this).toggleClass('clickable');
        }).on('click', function () {
            location.href = '/Master/EditDisAgreementDetails/' + $(this).find('td:first').text();
        });
    });
</script>  


