@*@model CreditRatingModel.Model.EmployeeMonthlySalary *@

@{
    ViewBag.Title = "";
    var grid = new WebGrid(Model, canSort: true, canPage: true, rowsPerPage: 10);
    grid.Pager(WebGridPagerModes.All);
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}

@*<h2>ViewCRSAdminApproval</h2>*@
<div class="container">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <label id="lblHeading" class="filter-col control-label labelHead">Approval From CRS Admin</label>
        </div>
        <div class="row">
            <div class="col-xs-1">
            </div>
            <div class="col-xs-10">
                <div class="panel panel-primary filterable">
                    <div class="panel-heading">
                        <h3 class="panel-title">Approval</h3>
                        <div class="pull-right">
                            <button class="btn btn-default btn-xs btn-filter"><span class="glyphicon glyphicon-filter"></span>Filter</button>
                        </div>
                    </div>
                    <div style="overflow-x: auto; height: 500px">
                        <label id="lblComp" class="filter-col control-label label2"></label>

                           <div class="form-group" id="lblMonthdate" >
                                    <label id="lbldate" class="filter-col control-label label2"></label>
                                </div>


                        <table class="table">
                            <thead>
                                <tr class="filters">
                                    @*   <th width="20px"> <input type="text"  placeholder="Course Category" disabled> </th>
                            <th width="20px" >
                                                <input type="hidden" class=" form-control" disabled>
                                            </th>
                                          *@
                                  @*  <th style="width: 20px">
                                        <input type="text" class="form-control" placeholder="Date" >
                                    </th>*@
                                    <th style="width: 30px">
                                        <input type="text" class="form-control" placeholder="Company Name" disabled>
                                    </th>

                                    <th style="width: 10px">
                                        <input type="text" class="form-control" placeholder="80%" disabled>
                                    </th>
                                    <th style="width: 30px">
                                        <input type="text" class="form-control" placeholder="20%" disabled>
                                    </th>
                                    <th style="width: 30px">
                                        <input type="text" class="form-control" placeholder="Total EMI" disabled>
                                    </th>
                                    <th style="width: 15px">
                                        <input type="hidden" class=" form-control" disabled>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr class="filters">
                                    @grid.GetHtml(
                                        tableStyle: "table",
                                        headerStyle: "webgrid-header",
                                        //footerStyle: "webgrid-footer",
                                        
                                        columns: grid.Columns(
                                            grid.Column(columnName: "Date1", style: "webgrid-fixColumn  webgrid-hide"),
                                            grid.Column(columnName: "company", style: "webgrid-fixColumn"),
                                            grid.Column(columnName: "Id", style: "webgrid-hide  webgrid-hide"),
                                            grid.Column(columnName: "MID", style: "webgrid-hide  webgrid-hide"),
                                            grid.Column(columnName: "countre", style: "webgrid-fixColumn"),
                                            grid.Column(columnName: "CountReturned", style: "webgrid-fixColumn"),
                                            grid.Column(columnName: "TOTAL", style: "webgrid-fixColumn"),
                                            grid.Column("", format: @<text>@Html.ActionLink("View", "GetEmpCompDistInfo", "EmployeeMonthlySalary", new { id = item.Id, Mid = item.MID   }, null)</text>
                                    )))
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>

    </div>


</div>
<script type="text/javascript">
    $(document).ready(function () {
        debugger;
        var today = new Date();

        var monthNames = ["January", "February", "March", "April", "May", "June",
  "July", "August", "September", "October", "November", "December"
        ];
        var month = monthNames[today.getMonth()]
        var year = today.getFullYear();

        today = month + '-' + year;
        $('#lbldate').html(today);
    });

</script>


