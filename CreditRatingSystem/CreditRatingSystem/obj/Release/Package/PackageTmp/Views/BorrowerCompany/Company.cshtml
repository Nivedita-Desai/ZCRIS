    @{
        Layout = "~/Views/Shared/_LayoutMaster.cshtml";
    ViewBag.Title = "Company";
    var grid = new WebGrid(Model);
    grid.Pager(WebGridPagerModes.All);
}


 <style type="text/css">
            /*Here we will add css for style webgrid*/
                .webgrid-table
                {
                    font-family: "Trebuchet MS" , Arial, Helvetica, sans-serif;
                    font-size: 1.2em;
                    width: 100%;
                    display: table;
                    border-collapse: collapse;
                    border: solid 1px #1733D2;
                    background-color: white;
                }
                .webgrid-table td, th
                {
                    border: 1px solid #1733D2;
                    padding: 3px 7px 2px;
                }
                .webgrid-header
                {
                    background-color: #C1CFDA;
                    color: #EEE1E1;
                    padding-bottom: 4px;
                    padding-top: 5px;
                    text-align: left;
                }
                .webgrid-footer
                {
                }
                .webgrid-row-style
                {
                    padding: 3px 7px 2px;
                }
                .webgrid-alternating-row
                {
                    /*background-color: #EAF2D3;*/
                    padding: 3px 7px 2px;
                }
            </style>

<h2>Borrower Company</h2>

 <div id="content">
      
                @grid.GetHtml(
                tableStyle:"webgrid-table",
                headerStyle:"webgrid-header",
                footerStyle:"webgrid-footer", 
                alternatingRowStyle:"webgrid-alternating-row",
                rowStyle:"webgrid-row-style",
                columns:grid.Columns(
                    //here i will add column for serial no
                  
                    //grid.Column(columnName: "Date", format: (item) => Html.ActionLink(((string)item.Date), "Edit", new { id = item.id })),   
                    // grid.Column(header: "Id", format: @<text><div>@(item.WebGrid.Rows.IndexOf(item) + 1)</div></text>),
             
                    grid.Column(columnName:"CompanyName", header:"Company Name"),
                    grid.Column(columnName:"CompanyType",header:"Company Type"),
                     grid.Column(columnName:"BranchName",header:"Branch Name"),
                     grid.Column(columnName:"view", header: "View Details", format: @<text><Button id="btnsave" name="save">
                         @Html.ActionLink("View", "Borrower", "BorrowerCompany", new {  id=item.Id, name=item.CompanyName  },new { target = "_blank" })</Button></text>)))  
           
      </div>


