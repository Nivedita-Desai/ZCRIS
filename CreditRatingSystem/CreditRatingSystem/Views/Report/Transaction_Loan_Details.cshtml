@model CreditRatingModel.Model.ReportSS 

@{
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";   
}

@*<h2>Transaction_Loan_Details</h2>*@

<div class="row" style="height:50px">
        </div>
        
        <div class="container">
            <div class="panel panel-primary">
                <div class="panel-heading"> <label id="lblHeading" class="filter-col control-label labelHead">Transaction Loan  Details</label>  </div>
                <div class="panel-body">
                     <fieldset class="scheduler-border">
            
                         <br/>
                    <div class="row">
                         
                        <div class="col-xs-6">
                   
                            <div class="form-group">
                                <label id="lblNID" class="filter-col control-label label1">NID :</label>
                          @Html.TextBoxFor(model => model.NID, new { @class = "form-control", @maxlength="13"})
                                                                                        
                            </div>
                       
                        </div>
                         <div class="row">
                          <div class="col-xs-6">
                                      <label id="lblLoanAcc" class="filter-col control-label label1">Loan Account No. :</label>
                          @Html.TextBoxFor(model => model.LoanAccountNo, new { @class = "form-control"})


                                    </div>
                    </div>
                        </div>
                          <div class="row">
                          <div class="col-xs-6">
                                      <label id="lblFromDt" class="filter-col control-label" style="display: block;font: 18px Arial;color: #000;margin-bottom: 15px;"> From Date :</label>
                          @Html.TextBoxFor(model => model.FromDate, new { @class = "form-control",@type="date"})


                                    </div>
                               <div class="col-xs-6">
                                      <label id="lblTodt" class="filter-col control-label " style="display: block;font: 18px Arial;color: #000;margin-bottom: 15px;"> To Date :</label>
                          @Html.TextBoxFor(model => model.ToDate, new { @class = "form-control", @type="date"})


                                    </div>
                    </div>
                                   </fieldset> 
                      <div class="row">
                                <div class="col-xs-5">
                                    </div>
                                    <div class="col-xs-4">
                                     
                                        <input type="button" id="btnShow" value="Generate Report" />
                                        
                                    </div>
                           <div class="col-xs-3">
                               @Html.HiddenFor(model => model.Id)

                                    </div>
                                </div>
                </div>
            </div>
            </div>

<script type="text/javascript" >
    $("#btnShow").click(function () {

        var NID = $("#NID").val();
        var LoanAccountNo = $("#LoanAccountNo").val();
        var FromDate = $("#FromDate").val();
        var ToDate = $("#ToDate").val();
        debugger;
      
        var url = '@Url.Action("Transaction_Loan_Details_View", "Report")' + '?NID=' + NID + '&LoanAccountNo=' + LoanAccountNo + '&FromDate=' + FromDate + '&ToDate=' + ToDate;
        window.open(url);

        });




</script>
