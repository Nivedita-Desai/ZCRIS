@model CreditRatingModel.Model.ReportSS 
@{
    //ViewBag.Title = "ConsumerCreditDetails";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";   
}

@*<h2>ConsumerCreditDetails</h2>*@



<div class="row" style="height:50px">
        </div>
 <div class="container">
         <div class="panel panel-primary">
              <div class="panel-heading"> <label id="lblHeading" class="filter-col control-label labelHead">Consumer Credit Details</label></div>
               <div class="panel-body">
                     <fieldset class="scheduler-border">
                          <div class="row">
                               <div class="col-xs-6">
                   
                            <div class="form-group">
                                <label id="lblNID" class="filter-col control-label label1">NID :</label>
                          @Html.TextBoxFor(model => model.NID, new { @class = "form-control", @maxlength="13"})
                                                                                        
                            </div>
                       
                        </div>
                              </div>
                     </fieldset>
                    <div class="row">
                                <div class="col-xs-5">
                                    </div>
                                    <div class="col-xs-4">
                                     
                                        <input type="button" id="btnShow" value="Generate Report" />
                                        
                                    </div>
                           <div class="col-xs-3">
                               @Html.HiddenFor(model => model.Id)

                                    </div>
                                </div>
               </div>
         </div>
 </div>
<script type="text/javascript" >
    $("#btnShow").click(function () {

        var NID = $("#NID").val();
    
        debugger;
      
        var url = '@Url.Action("ConsumerCreditDetailsView", "Report")' + '?NID=' + NID;
        window.open(url);

        });
</script>