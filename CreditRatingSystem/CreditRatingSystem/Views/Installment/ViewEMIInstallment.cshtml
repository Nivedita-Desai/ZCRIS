@{
    //ViewBag.Title = "ViewEMIInstallment";
    var grid = new WebGrid(Model);
    grid.Pager(WebGridPagerModes.All);
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}

<br/>
 <div class="container">
      <div class="panel panel-primary">
                <div class="panel-heading"> <label id="lblHeading" class="filter-col control-label labelHead">EMI Installment Details</label>  </div>
    
            <div class="row" >
                 <div class="col-xs-1">
                           
               </div>
            <div class="col-xs-10">
                           
            <div class="panel panel-primary filterable">
                <div class="panel-heading">
                    <h3 class="panel-title">EMI Installment Details</h3>
                    <div class="pull-right">
                        <button class="btn btn-default btn-xs btn-filter"><span class="glyphicon glyphicon-filter"></span> Filter</button>
                    </div>
                </div>
                <div style=" overflow-x: auto;height:500px">
                <table class="table">
                    <thead>
                        <tr class="filters">
                            <th width="10px">  <input type="text"  placeholder="Pancard Number" disabled> </th>
                             <th width="15px"> <input type="text"  placeholder="Loan Application Number" disabled> </th>
                            <th width="10px">   <input type="text" placeholder="EMI Amount" disabled> </th>
                            <th width="10px">  <input type="text"  placeholder="Numbers of EMI" disabled> </th>
                            <th width="10px">   <input type="text"  placeholder="Paid Amount" disabled> </th>
                            <th width="10px">   <input type="text"  placeholder="Received Amount" disabled> </th>  
                            <th width="10px">   <input type="text"  placeholder="Installment Date" disabled> </th>                              
                            <th width="15px">  <input type="hidden" disabled></th>

                            @* </div>*@

                        </tr>
                    </thead>
                    <tbody class="table">
                        <tr class="filters">
                            @grid.GetHtml(
                tableStyle: "table",
                headerStyle: "webgrid-header",
                        footerStyle: "webgrid-footer",
                                    //alternatingRowStyle: "webgrid-alternating-row",
                                    //rowStyle: "webgrid-row-style",
                columns: grid.Columns(
                                    //here i will add column for serial no
                                    //grid.Column(columnName: "Date", format: (item) => Html.ActionLink(((string)item.Date), "Edit", new { id = item.id })),
                                    //grid.Column(columnName:"Id", header:"ID", format: (item) => (item.Id)),
            grid.Column(columnName: "Pan", style: "webgrid-fixColumn"),
            grid.Column(columnName: "LoanApplicationNo", style: "webgrid-fixColumn"),
                    grid.Column(columnName: "EMIAmount", style: "webgrid-fixColumn"),
                     grid.Column(columnName: "NoOfEMI", style: "webgrid-fixColumn"),
                     grid.Column(columnName: "PaidAmount", style: "webgrid-fixColumn"),          
                      grid.Column(columnName: "ReceivedAmount", style: "webgrid-fixColumn"),   
                      grid.Column(columnName: "InstallmentDate", format: item => ((item.InstallmentDate == null) ? "" : item.InstallmentDate.ToString("dd/MMM/yyyy")), style: "webgrid-fixColumn"),         
                     grid.Column(columnName: "Id", style: "webgrid-hide"),
                  grid.Column("", format: @<text>@Html.ActionLink("View", "#", "#", new { id = item.Id }, null)</text>)))
                        </tr>
                    </tbody>
                </table>
                    </div>
                </div>
</div>
                 <div class="col-xs-1">
                           
               </div>
        </div>
    </div>
     </div>
