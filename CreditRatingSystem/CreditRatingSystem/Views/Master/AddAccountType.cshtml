<script type="text/javascript" >

    $('#btnSave').click(function () {

        debugger;
        var Id = $("#Id").val();
        if ($("#Id").val() == "") {
            Id = 0;
        }
        var AccountType = $("#AccountType").val();
    debugger;
    $.ajax ({

        url: '/Master/AddAccountType1/',
        type :'POST',
        data: { Id: Id, AccountType: AccountType },
        success: function (data) {
            debugger;
            var a = JSON.stringify(data);
            if (Id == "") {

                if (a == "true") {

                    alert('Record saved successfully!');
                    $("#AccountType").val('');
                }
                else if (a == "false") {

                    alert('Account Type already Exits!');
                    $("#AccountType").val("");
                }

            }
            else {
                if (a == "true") {
                    alert('Record saved successfully!');
                    window.location.href = '/Master/ViewAccountType';
                }
                else if (a == "false") {

                    alert('Account Type already Exits');

                }

            }
        }
      });
   });
</script>

