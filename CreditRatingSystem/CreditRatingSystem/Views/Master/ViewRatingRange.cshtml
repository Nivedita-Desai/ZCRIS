@{
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";

    var grid = new WebGrid(Model, canSort: true, canPage: true, rowsPerPage: 9);
    grid.Pager(WebGridPagerModes.All);
    
}

<body>
    <br/>
    <div class="container">
            <div class="panel panel-primary" style="height:660px">
                <div class="panel-heading"> <label id="lblHeading" class="filter-col control-label labelHead">Rating Range Master</label>  </div>
                <div class="panel-body">
        <div class="row">
             <div class="col-xs-1">
                           
               </div>
             <div class="col-xs-10">
            <div class="panel panel-primary filterable">
                <div class="panel-heading">
                    <h3 class="panel-title">Rating Range </h3>
                    <div class="pull-right">
                        <button class="btn btn-default btn-xs btn-filter"><span class="glyphicon glyphicon-filter"></span> Filter</button>
                    </div>
                </div>
             
                    <table class="table">
                        <thead>
                            <tr class="filters">

                               <th style="width: 34px">
                                    <input type="text" class="form-control" placeholder="Range From " disabled>
                                </th>
                                 <th style="width: 30px">
                                    <input type="text" class="form-control" placeholder="Range To " disabled>
                                      </th>
                                      <th style="width: 24px">
                                    <input type="text" class="form-control" placeholder="Status" disabled>
                               
                                </th>
                                    <th style="width: 15px">
                                    <input type="hidden" class=" form-control" disabled></th>


                            </tr>
                        </thead>
                        <tbody>
                            <tr class="filters">
                                @grid.GetHtml(
                tableStyle: "table",
                headerStyle: "webgrid-header",
                        
                columns: grid.Columns(
                  grid.Column(columnName: "FROM_VALUE", style: "webgrid-fixColumn"),
                    grid.Column(columnName: "TO_VALUE", style: "webgrid-fixColumn"),
                       grid.Column(columnName: "RATING_STATUS", style: "webgrid-fixColumn"),
                        grid.Column(columnName: "ID", style: "webgrid-footer")

                     ))     </tr>
                        </tbody>
                    </table>
            
                </div>
                 </div> 
            <div class="col-xs-1">
                           
               </div>
        </div>
    </div>
                </div>
        </div>

</body>


<script type="text/javascript">
    $(function () {
        debugger;
        $('tbody tr').hover(function () {
            $(this).toggleClass('clickable');
        }).on('click', function () {
            location.href = '/Master/AddRatingRange/' + $(this).find('td:last').text();
        });
    });
</script>  

