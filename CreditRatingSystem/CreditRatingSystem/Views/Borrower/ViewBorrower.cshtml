                                       grid.Column(columnName: "Id", style: "webgrid-hide"),
                  grid.Column("", format: @<text>@Html.ActionLink("View", "EditBorrowerCustomer", "Borrower", new { id = item.Id }, null)</text>)))

                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                               <div class="col-xs-1">
                               </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
                </div>
            </div>
        </div>
    </div>
</div>


